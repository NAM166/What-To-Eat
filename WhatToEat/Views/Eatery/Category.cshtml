@model IEnumerable<WhatToEat.Models.ViewModels.Eatery.ProductVM>

@{
    ViewBag.Title = ViewBag.CategoryName;
}

<h2>ViewBag.CategoryName</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Calorie
        </th>
        <th>
           Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Calorie)
        </td>
        <td>
         <a href="/eatery/product/-details/@item.Slug">
             <img src="/Images/Uploads/Products/@item.Id/Thumbs/@item .ImageName" />
         </a>
        </td>
        <td>
             <a href="/eatery/product-details/@item.Slug">Details</a>
        </td>
    </tr>
}

</table>
