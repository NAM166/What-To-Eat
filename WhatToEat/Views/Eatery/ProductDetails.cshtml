@model WhatToEat.Models.ViewModels.Eatery.ProductVM

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>
<br />

<div class="row">

    <div class="col-xs-12 col-md-4">
        <img src="/Images/Uploads/Products/@Model.Id/Thumbs/@Model.ImageName" />
    </div>

    <div class="col-xs-12 col-md-8">
         @Html.DisplayFor(model => model.Description)
        <br />
        @Html.DisplayFor(model => model.Calorie)
        <br />

        <div href="#" class="addtodiary">
            <a href="#" class="addtodiary">Add to diary</a>
            <span class="loader">
                <img src="~/Content/img/ajax-loader.gif" />
            </span>
            <span class="ajaxmsg">This product has been added to your Calories.</span>
        </div>
     </div>
</div>


